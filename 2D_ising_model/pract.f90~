			IMPLICIT NONE
			INTEGER::l,i,j,p1,p2,dels
			REAL::r1,r2,w,oldE,newE,delE,a,TE,TM
			
			
			n=3
			ALLOCATE(s(n,n))	

			DO i=1,n
				DO j=1,n
				s(i,j)=1
				
				ENDDO
			print*,s(i,1),s(i,2),s(i,3),s(i,4),s(i,5)
			ENDDO
		
			i=s(1:3,1:3)

			print*,i

			

			END PROGRAM
